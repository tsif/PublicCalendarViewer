<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey" >

    <TextView
        android:id="@+id/textViewHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/activity_margin"
        android:gravity="center"
        android:text="@string/event_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/header_green" />

    <TextView
        android:id="@+id/textViewHeaderSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textViewHeaderTitle"
        android:layout_margin="@dimen/activity_margin"
        android:gravity="center"
        android:text="@string/event_subtitle"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewHeaderDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textViewHeaderSubtitle"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:text="@string/event_details"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/buttonShare"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textViewHeaderDetails"
        android:layout_margin="@dimen/activity_margin"
        android:background="@drawable/share_button_selector"
        android:text="@string/share"
        android:textColor="@color/link_blue" />

    <TextView
        android:id="@+id/textViewListHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewHeaderDetails"
        android:layout_alignRight="@+id/textViewHeaderDetails"
        android:layout_below="@id/buttonShare"
        android:text="@string/agenda_text"
        android:textAppearance="?android:attr/textAppearanceMedium"  />

</RelativeLayout>